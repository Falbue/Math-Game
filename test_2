from tkinter import *


root_factor = Tk()
root_factor.geometry(f'{400}x{400}+{200}+{200}')


t=0
tick = 0
seconds = 0

def btn_watch():
    global seconds

    seconds = 6

    if (t >= 2):
        root_factor.after_cancel(tick)

    watch()
    lbl_time.place(relx = 0.5, rely= 0.4)

 
def watch():
    global seconds, tick, t

    t += 1
    seconds -= 1

    lbl_time.config(text=str(seconds))
 
    tick = root_factor.after(1000, watch)

btn_watch = Button (
    text="Таймер",
    font = 'Consolas 24 bold',
    border = 0,
    command=btn_watch)
btn_watch.place(relx = 0.4, rely = 0.7)

lbl_time = Label(
    text = str(seconds),
    font = 'Consolas 26 bold')


root_factor.mainloop()